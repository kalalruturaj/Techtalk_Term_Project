<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_column="22"
            android:src="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/etFname"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:hint="First Name"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etLname"
        android:layout_below="@+id/etFname"
        android:layout_alignLeft="@+id/etFname"
        android:layout_alignStart="@+id/etFname"
        android:layout_marginTop="29dp"
        android:hint="Last Name" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etusername"
        android:layout_below="@+id/etLname"
        android:layout_alignLeft="@+id/etLname"
        android:layout_alignStart="@+id/etLname"
        android:layout_marginTop="31dp"
        android:hint="User Name" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:layout_below="@+id/etusername"
        android:layout_alignLeft="@+id/etusername"
        android:layout_alignStart="@+id/etusername"
        android:layout_marginTop="25dp"
        android:hint="Password" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etConfirmPass"
        android:layout_below="@+id/etPassword"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_marginTop="28dp"
        android:hint="Confirm Password" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etEmail"
        android:layout_below="@+id/etConfirmPass"
        android:layout_alignLeft="@+id/etConfirmPass"
        android:layout_alignStart="@+id/etConfirmPass"
        android:layout_marginTop="26dp"
        android:hint="Enter E-mail" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btRegister"
        android:background="#f7c767"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etEmail" />

</RelativeLayout>